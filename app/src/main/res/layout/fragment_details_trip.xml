<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fragments.DetailsTripFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/details_trip_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:background="@drawable/banner"/>
        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_below="@+id/details_trip_banner"
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:id="@+id/details_trip_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/details_trip_image"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/details_trip_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/details_trip_title"
            android:layout_centerHorizontal="true"
            android:id="@+id/details_trip_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="@dimen/_100sdp"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/details_trip_date"
            android:id="@+id/details_trip_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" كتب بواسطه: "
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/details_trip_date"
            android:layout_toEndOf="@+id/details_trip_name"/>
        <TextView
            android:id="@+id/details_trip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="description"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/details_trip_name"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</ScrollView>

